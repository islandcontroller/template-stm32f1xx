        "enabled": true,
        "source": "probe",
        "cpuFrequency": 72000000,
        "decoders": [
          {
            "type": "console",
            "label": "ITM", 
            "showOnStartup": true,
            "port": 0,
            "encoding": "ascii"
          }
        ]
      },*/

